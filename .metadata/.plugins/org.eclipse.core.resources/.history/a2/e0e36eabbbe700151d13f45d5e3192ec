#include "msp432.h"
#include "stdint.h"
#include "functions.h"
#include "macros.h"
#include "driverlib.h"

void Init_Eusci(){
	// configure in master mode using I2C
	UCB1CTLW0 = BIT1; // enable changes to control register
	UCB1CTLW0 = BITB | BITA | BIT9 | BIT7 | BIT6 | BIT4;
	//UCBR1 =
	UCB1I2COA0 = BITF | BITA | LIGHT_SENSOR_ADDR; //Own address configuration
	UCB1I2CSA = LIGHT_SENSOR_ADDR;

	UCB1CTLW0 &= ~BIT1;
}
