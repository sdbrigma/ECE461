#include "msp432.h"
#include "stdint.h"
#include "driverlib.h"
#include "functions.h"
#include "macros.h"


void port5IsrHandler(){ // SW1
	doorbell();
}

void port3IsrHandler(){//SW2

}

uint32_t adcResult;
void adc14IsrHandler(){
	if(ADC14MEM10 >= BURGLAR){
		burglar_alarm();
	    P2OUT &= ~BIT4;
	    P2OUT |= BIT6;
		adcResult = ADC14MEM10;
	}
	else{
		adcResult = ADC14MEM10;
	}
	ADC14_clearInterruptFlag(ADC_INT10);
}
